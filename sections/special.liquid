{% schema %}
{
  "name": "special",
  "blocks": [
    {
      "type": "special_cakes",
      "name": "Cake",
      "settings": [
        {
          "type": "image_picker",
          "label": "Image",
          "id": "image"
        },
        {
        "type": "url",
        "label": "Image Link",
        "id": "link"
      },

        {
          "type": "text",
          "label": "Text",
          "id": "text"
        }
      ]
    }
  ],
  "presets": [
    {
     "name": "special",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<script>
  document.addEventListener('DOMContentLoaded', function() {
    if (document.cookie.indexOf('access=true') === -1) {
      window.location.href = 'https://premium-cakes.myshopify.com/pages/vip-store';
    } else {
      document.getElementById('content-image').style.display = 'block';
     
    }
  });
</script>


<div class="special-cakes-section" id="content-image">
  <div class="special-cakes-row">
    {% for block in section.blocks %}
      <div class="special-cakes-item">
        <div class="image-wrapper">
          <a href="{{ block.settings.link }}" target="_blank">
            <img src="{{ block.settings.image | img_url: '600x600' }}" alt="Image">
            <div class="overlay-text">
              {{ block.settings.text }}
            </div>
          </a>
        </div>
      </div>
      {% cycle '', '', '</div><div class="special-cakes-row">' %}
    {% endfor %}
  </div>
</div>


{% stylesheet %}



    .main-page-title{
    text-align:center;
  }


  
/* Example CSS for overlaying text on images with fixed dimensions */
.special-cakes-item {
  position: relative;
  display: inline-block;
  margin-left: 180px;
  margin-right:140px;
  margin-top: 80px;
  width: 300px; /* Set the desired width for each block */
  height: 300px; /* Set the desired height for each block */
}

.image-wrapper {
  position: relative;
  overflow: hidden;
  width: 100%;
  height: 100%;
}

img {
  width: 100%;
  height: 100%;
  object-fit: cover; /* This ensures the image covers the entire container */
  display: block;
}

.overlay-text {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.5); /* Adjust the background color and opacity as needed */
  color: #fff; /* Text color */
  padding: 10px;
}

{% endstylesheet %}



