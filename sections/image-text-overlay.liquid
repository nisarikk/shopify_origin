<div class="shop-online-section">
  <div class="shop-online-row">
    {% for block in section.blocks %}
      <div class="shop-online-item">
        <div class="image-wrapper">
          <a href="{{ block.settings.link }}" target="_blank">
            <img src="{{ block.settings.image | img_url: '600x600' }}" alt="Image">
            <div class="overlay-text">
              {{ block.settings.text }}
            </div>
          </a>
        </div>
      </div>
      {% cycle '', '', '</div><div class="shop-online-row">' %}
    {% endfor %}
  </div>
</div>


{% schema %}
{
  "name": "Shop Online with Blocks",
  "blocks": [
    {
      "type": "shop_online_block",
      "name": "Shop Online Block",
      "settings": [
        {
          "type": "image_picker",
          "label": "Image",
          "id": "image"
        },
        {
        "type": "url",
        "label": "Image Link",
        "id": "link"
      },

        {
          "type": "text",
          "label": "Text",
          "id": "text"
        }
      ],
      "limit": 7
    }
  ],
  "presets": [
    {
      "name": "Shop Online with Blocks",
      "category": "Custom"
    }
  ]
}
{% endschema %}




{% stylesheet %}
/* Example CSS for overlaying text on images with fixed dimensions */
.shop-online-item {
  position: relative;
  display: inline-block;
  margin-left: 180px;
  margin-right:140px;
  margin-top: 80px;
  width: 300px; /* Set the desired width for each block */
  height: 300px; /* Set the desired height for each block */
}

.image-wrapper {
  position: relative;
  overflow: hidden;
  width: 100%;
  height: 100%;
}

img {
  width: 100%;
  height: 100%;
  object-fit: cover; /* This ensures the image covers the entire container */
  display: block;
}

.overlay-text {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.5); /* Adjust the background color and opacity as needed */
  color: #fff; /* Text color */
  padding: 10px;
}



{% endstylesheet %}


