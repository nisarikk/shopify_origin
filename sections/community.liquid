{% schema %}
{
  "name": "community-content",
  "blocks": [
    {
      "type": "video",
      "name": "Custom video",
      "settings": [
        {
          "type": "url",
          "id": "video_url",
          "label": "Video URL"
        }
      ]
    },
    {
      "type": "image",
      "name": "Custom image",
      "settings": [
        {
          "type": "url",
          "id": "image_url",
          "label": "Image URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Community Media",
      "category": "Custom"
    }
  ]
}
{% endschema %}


{% stylesheet %}
.slider-container {
  max-width: 100%;
  margin: 0 auto;
  padding: 20px;
  position: relative;
  overflow: hidden; 
}

.autoplay.single-item {
  display: flex;
  justify-content: center;
  align-items: center;
}

.slide {
  flex: 0 0 auto;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  padding: 20px;
}

.slide img, .slide video {
  width: 550px;
  height: 550px;
  object-fit: cover;
  margin: 0 auto;
  display: block;
}

{% endstylesheet %}

{% javascript %}
$(document).ready(function(){
  $('.single-item').slick({
    slidesToShow: 3,
    slidesToScroll: 1,
    autoplay: true,
    autoplaySpeed: 4000,
    arrows: true, 
    dots: true,
  });
});
{% endjavascript %}

<div class="slider-container">
  <div class="autoplay single-item">
    {% for block in section.blocks %}
      <div class="slide">
        {% case block.type %}
          {% when "video" %}
            <video autoplay muted loop playsinline class="video-homepage">
              <source src="{{ block.settings.video_url}}">
            </video>
          {% when "image" %}
            <img src="{{ block.settings.image_url}}">
        {% endcase %}
      </div>
    {% endfor %}
  </div>
</div>
